<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Editar Perfil">
        <EditTextPreference
            android:id="@+id/settingsName"
            android:key="name"
            android:inputType="textCapWords"
            android:summary="Ingrese su Nombre"
            android:title="Nombre" />
        <!--EditTextPreference
            android:id="@+id/settingsEmail"
            android:key="email"
            android:summary="Usuario de la app"
            android:title="E-mail" /-->
        <!--EditTextPreference
            android:id="@+id/settingsPassword"
            android:key="password"
            android:summary="Contraseña privada"
            android:title="Contraseña" /-->
        <EditTextPreference
            android:id="@+id/settingsAge"
            android:key="age"
            android:inputType="number"
            android:summary="Edad del usuario"
            android:title="Edad" />
    </PreferenceCategory>
    <PreferenceCategory android:title="General">
        <SwitchPreference
            android:id="@+id/settingsKeepSesion"

            android:key="keep_logged"
            android:summary="Cuando abra la aplicación siempre iniciará con la última sesión abierta"
            android:title="Mantener Sesión" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Notificaciones">
        <CheckBoxPreference
            android:id="@+id/settingsSendNotification"
            android:key="notification"
            android:summary="Se le enviarán notifiaciones regularmente"
            android:title="Autorizar Notificaciones" />
        <CheckBoxPreference
            android:id="@+id/settingsSoundNotification"
            android:key="sound"
            android:summary="Activa/Desactiva sonido al entrar una notificaiones"
            android:title="Activar Sonido de Notificaiones" />
    </PreferenceCategory>
    <EditTextPreference
        android:id="@+id/settingsSeconds"
        android:key="seconds"
        android:inputType="number"
        android:summary="Frecuencia de actualización en segundos"
        android:title="Tasa de actualización"/>
</PreferenceScreen>